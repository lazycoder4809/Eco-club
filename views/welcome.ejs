  <!-- AOS JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

  <script>

    // Init AOS
    AOS.init({
      duration: 700,
      easing: 'ease-out-cubic',
      once: true,
      offset: 80
    });

    // Parallax background movement on mouse move (subtle)
    (function(){
      const bg = document.getElementById('parallaxBg');
      window.addEventListener('mousemove', (e) => {
        const x = (e.clientX / window.innerWidth - 0.5) * 16; // +/-8px
        const y = (e.clientY / window.innerHeight - 0.5) * 8; // +/-4px
        bg.style.transform = `translate3d(${x}px, ${y}px, 0) scale(1.02)`;
      });
    })();

    // Floating leaves animation (vertical drift + rotation)
    (function(){
      const leaves = [
        {id:'leaf1', dx:0.9, dur:14000, sway:18},
        {id:'leaf2', dx:-0.7, dur:17000, sway:12},
        {id:'leaf3', dx:0.6, dur:12000, sway:22},
      ];
      leaves.forEach(cfg => {
        const el = document.getElementById(cfg.id);
        if(!el) return;
        let start = performance.now();
        function tick(t){
          const elapsed = t - start;
          const progress = (elapsed % cfg.dur) / cfg.dur;
          const top = -12 + progress * 122; // in vh
          const sway = Math.sin(progress * Math.PI * 2) * cfg.sway;
          el.style.transform = `translate3d(${sway + cfg.dx*6}px, ${top}vh, 0) rotate(${progress*360}deg)`;
          requestAnimationFrame(tick);
        }
        requestAnimationFrame(tick);
      });
    })();

    // Animated counters that start when element visible
    (function(){
      const counters = document.querySelectorAll('.stat-number[data-target]');
      const options = {threshold: 0.45};
      const run = (el) => {
        const target = +el.getAttribute('data-target');
        const duration = 1400;
        let start = null;
        function step(ts){
          if(!start) start = ts;
          const p = Math.min((ts-start)/duration,1);
          const ease = 1 - Math.pow(1-p,3);
          const val = Math.floor(target * ease);
          el.textContent = val >= 1000 ? (val/1000).toFixed(val%1000===0?0:1)+'k' : val;
          if(p < 1) requestAnimationFrame(step);
        }
        requestAnimationFrame(step);
      };

      const io = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if(entry.isIntersecting){
            run(entry.target);
            obs.unobserve(entry.target);
          }
        });
      }, options);

      counters.forEach(c => io.observe(c));

      // Also update mini hero numbers (simple set)
      const miniMembers = document.getElementById('miniMembers');
      const miniTrees = document.getElementById('miniTrees');
      if(miniMembers) miniMembers.textContent = '3,450';
      if(miniTrees) miniTrees.textContent = '1,200';
    })();

    // Smooth scrolling for nav links
    (function(){
      document.querySelectorAll('.links a').forEach(a=>{
        a.addEventListener('click', (e)=>{
          const href = a.getAttribute('href');
          if(href && href.startsWith('#')){
            e.preventDefault();
            const el = document.querySelector(href);
            if(el) el.scrollIntoView({behavior:'smooth'});
          }
        });
      });
      // Hero join buttons
      document.getElementById('heroJoin').addEventListener('click', ()=> {
        document.querySelector('.cta-footer').scrollIntoView({behavior:'smooth'});
      });
      document.getElementById('navJoin').addEventListener('click', ()=> {
        document.querySelector('.cta-footer').scrollIntoView({behavior:'smooth'});
      });
    })();

    // Theme toggle with localStorage
    (function(){
      const root = document.documentElement;
      const toggle = document.getElementById('themeToggle');
      const icon = document.getElementById('themeIcon');

      const setIcon = (theme) => {
        if(theme === 'dark'){
          icon.className = 'fa-solid fa-sun';
          toggle.setAttribute('aria-pressed','true');
        } else {
          icon.className = 'fa-regular fa-moon';
          toggle.setAttribute('aria-pressed','false');
        }
      };

      const saved = localStorage.getItem('ecoTheme') || (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      root.setAttribute('data-theme', saved);
      setIcon(saved);

      toggle.addEventListener('click', () => {
        const current = root.getAttribute('data-theme');
        const next = current === 'dark' ? 'light' : 'dark';
        root.setAttribute('data-theme', next);
        localStorage.setItem('ecoTheme', next);
        setIcon(next);
      });
    })();

    // Respect prefers-reduced-motion
    (function(){
      const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
      if(mq.matches){
        document.querySelectorAll('[data-aos]').forEach(el => el.removeAttribute('data-aos'));
        document.querySelectorAll('.leaf').forEach(l => l.style.animation = 'none');
      }
    })();
    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
